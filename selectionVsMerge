#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define MAX 10000

// Merge Sort functions
void merge(int a[], int l, int m, int r) {
    int n1=m-l+1, n2=r-m, L[n1], R[n2];
    for(int i=0;i<n1;i++) L[i]=a[l+i];
    for(int i=0;i<n2;i++) R[i]=a[m+1+i];
    int i=0,j=0,k=l;
    while(i<n1 && j<n2) a[k++]=(L[i]<=R[j])?L[i++]:R[j++];
    while(i<n1) a[k++]=L[i++];
    while(j<n2) a[k++]=R[j++];
}
void mergeSort(int a[], int l, int r){
    if(l<r){
        int m=(l+r)/2;
        mergeSort(a,l,m);
        mergeSort(a,m+1,r);
        merge(a,l,m,r);
    }
}

// Selection Sort
void selectionSort(int a[], int n){
    for(int i=0;i<n-1;i++){
        int min=i;
        for(int j=i+1;j<n;j++) if(a[j]<a[min]) min=j;
        int t=a[i]; a[i]=a[min]; a[min]=t;
    }
}


int main(){
    int n, a1[MAX];
    clock_t start, end;
    double time_taken;

    srand(time(NULL));

    // Fill array with random numbers
    for(int i=0;i<n;i++){
        a1[i]=rand()%10000; 
    }

    // Merge Sort
    start=clock();
    mergeSort(a1,0,n-1);
    end=clock();
    time_taken=((double)(end-start))/CLOCKS_PER_SEC;
    printf("\nMerge Sort Result:\n");
    printf("Time taken: %.6f sec\n", time_taken);

    // Selection Sort
    start=clock();
    selectionSort(a1,n);
    end=clock();
    time_taken=((double)(end-start))/CLOCKS_PER_SEC;
    printf("\nSelection Sort Result:\n");
    printf("Time taken: %.6f sec\n", time_taken);

    return 0;
}

